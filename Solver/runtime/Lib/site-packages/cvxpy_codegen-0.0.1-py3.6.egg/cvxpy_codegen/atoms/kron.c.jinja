{{-  u.nzval(expr.args[0]) }},
{{- u.rowptr(expr.args[1]) }},
{{- u.colidx(expr.args[1]) }},
{{-  u.nzval(expr.args[1]) }},
{{- u.rowptr(expr) }},
{{- u.colidx(expr) }},
{{-  u.nzval(expr) }});
{% endmacro %}
