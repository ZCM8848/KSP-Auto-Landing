{% import "utils/utils.c.jinja" as u with context %}


{% macro kron_declare() %}
void kron(long m, long n, long *w, double *x,
          long *Ap, long *Aj, double *Ax,
          long *Bp, long *Bj, double *Bx,
          long *Zp, long *Zj, double *Zx);
{% endmacro %}


{% macro kron_define() %}
/* Computes the Kronecker product Z = kron(A, B). */
void kron(long m, long n, long *w, double *x,
          long *Ap, long *Aj, double *Ax,
          long *Bp, long *Bj, double *Bx,
          long *Zp, long *Zj, double *Zx){

  long i, j, k, p, p2, q, q2, r=0;
  double Aij;
  for(i=0; i<n; i++)  w[i] = 0;
  Zp[0] = 0;

  for(i=0; i<nZ; i++){
    Zp[i+1] = Zp[i];
    p2 = Ap[i+1];
    for(p=Ap[i]; p<p2; p++){
      j = Aj[p];
      Aij = Ax[p];
      q2 = Bp[j+1];
      for(q=Bp[j]; q<q2; q++){
        k = Bj[q];
        if(w[k] < i+1){
          w[k] = i+1;
          x[k] = Aij * Bx[q];
          Zj[r++] = k;
          Zp[i+1]++;
        }
        else{
          x[k] += Aij * Bx[q];
        }
      }
    }
    for(p=Zp[i]; p<Zp[i+1]; p++){
      Zx[p] = x[Zj[p]];
    }
  }
}
{% endmacro %}


{% macro kron_eval(expr) %}
